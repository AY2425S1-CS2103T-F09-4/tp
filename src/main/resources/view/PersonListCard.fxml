<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
    </columnConstraints>
    <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
      <padding>
        <Insets top="5" right="5" bottom="5" left="15" />
      </padding>
      <HBox spacing="0.5" alignment="CENTER_LEFT">
        <Label fx:id="id" styleClass="cell_big_label">
          <minWidth>
            <!-- Ensures that the label text is never truncated -->
            <Region fx:constant="USE_PREF_SIZE" />
          </minWidth>
        </Label>
        <Label fx:id="name" text="\$first" styleClass="cell_big_label" />
      </HBox>
      <FlowPane fx:id="tags" HBox.hgrow="ALWAYS"/>
      <!-- Next Lesson -->
      <HBox spacing="5" alignment="CENTER_LEFT" fx:id="nextLessonBox"
            managed="${nextLesson.visible}" visible="${nextLesson.visible}">
        <Label text="Next Lesson:" styleClass="cell_small_label">
          <minWidth>
            <!-- Ensures that the label text is never truncated -->
            <Region fx:constant="USE_PREF_SIZE" />
          </minWidth>
        </Label>

        <Label fx:id="nextLesson" styleClass="cell_small_label"/>
      </HBox>

      <!-- Phone -->
      <HBox spacing="5" alignment="CENTER_LEFT">
        <Label text="Phone:" styleClass="cell_small_label">
          <minWidth>
            <!-- Ensures that the label text is never truncated -->
            <Region fx:constant="USE_PREF_SIZE" />
          </minWidth>
        </Label>
        <Label fx:id="phone" styleClass="cell_small_label" />
      </HBox>

      <!-- Telegram -->
      <HBox spacing="5" alignment="CENTER_LEFT" managed="${telegram.visible}" visible="${telegram.visible}">
        <Label text="Telegram:" styleClass="cell_small_label">
          <minWidth>
            <!-- Ensures that the label text is never truncated -->
            <Region fx:constant="USE_PREF_SIZE" />
          </minWidth>
        </Label>
        <Label fx:id="telegram" styleClass="cell_small_label" />
      </HBox>

      <!-- Address -->
      <HBox spacing="5" alignment="CENTER_LEFT" managed="${address.visible}" visible="${address.visible}">
        <Label text="Address:" styleClass="cell_small_label">
          <minWidth>
            <!-- Ensures that the label text is never truncated -->
            <Region fx:constant="USE_PREF_SIZE" />
          </minWidth>
        </Label>

        <Label fx:id="address" styleClass="cell_small_label" style="-fx-text-overrun: ellipsis;" />
      </HBox>

      <!-- Email -->
      <HBox spacing="5" alignment="CENTER_LEFT" managed="${email.visible}" visible="${email.visible}">
        <Label text="Email:" styleClass="cell_small_label">
          <minWidth>
            <!-- Ensures that the label text is never truncated -->
            <Region fx:constant="USE_PREF_SIZE" />
          </minWidth>
        </Label>

        <Label fx:id="email" styleClass="cell_small_label" />
      </HBox>

    </VBox>
  </GridPane>
</HBox>
